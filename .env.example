# Shuup Environment Configuration Template
# Copy this file to .env and customize for your environment

# Django Configuration
DJANGO_SETTINGS_MODULE=shuup_workbench.settings.dev
DEBUG=1
SECRET_KEY=dev-secret-key-change-in-production

# Database Configuration
# SQLite (default for development)
DATABASE_URL=sqlite:///./shuup.sqlite3

# PostgreSQL (uncomment to use)
# DATABASE_URL=postgresql://user:password@localhost:5432/shuup

# MySQL (uncomment to use)
# DATABASE_URL=mysql://user:password@localhost:3306/shuup

# Cache Configuration
CACHE_URL=locmem://

# Redis Cache (uncomment to use)
# CACHE_URL=redis://localhost:6379/1

# Media and Static Files
MEDIA_URL=/media/
STATIC_URL=/static/
MEDIA_ROOT=./media/
STATIC_ROOT=./staticfiles/

# Email Configuration (Console backend for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Email (uncomment to use)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=1
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Logging Configuration
LOG_LEVEL=DEBUG

# Development Tools
ENABLE_DEBUG_TOOLBAR=1

# External Services (if needed)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-s3-bucket

# Sentry (Error Tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Stripe (Payment Processing)
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...

# PayPal (Payment Processing)
# PAYPAL_CLIENT_ID=your-paypal-client-id
# PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Social Authentication
# GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
# GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# Facebook Login
# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret
